<!--
================================================================================
	 R01F LOGBACK CONFIG (see r01fbClasses/logback.xml)
================================================================================
-->
<included>
	<!-- Libraries -->
	<!-- Avoid some apache commons beanutils logs -->
	<logger name="org.apache.commons.beanutils" level="WARN" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="app_log" />
	</logger>
	<logger name="org.reflections" level="WARN" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="app_log" />
	</logger>
	<logger name="org.apache.hadoop" level="OFF" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="app_log" />
	</logger>
	<logger name="org.apache.http.wire" level="OFF" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="app_log" />
	</logger>
	<logger name="org.apache.http" level="WARN" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="app_log" />
	</logger>
	<logger name="org.quartz" level="WARN" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="app_log" />
	</logger>
	<!-- Mute c3p0 logs -->
	<logger name="com.mchange.v2" level="OFF" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="app_log" />
	</logger>

	<!-- R01F -->
	<logger name="r01f" level="WARN" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="app_log" />
	</logger>
	<logger name="r01f.marshalling" level="ERROR" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="app_log" />
	</logger>
	<logger name="r01f.reflection" level="WARN" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="app_log" />
	</logger>
	<logger name="r01f.persistence" level="INFO" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="app_log" />
	</logger>
	<logger name="r01f.lucene" level="WARN" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="app_log" />
	</logger>
	<logger name="r01f.io" level="WARN" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="app_log" />
	</logger>
	<logger name="r01f.filestore.api.hdfs" level="WARN" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="app_log" />
	</logger>
</included>